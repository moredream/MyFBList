<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p id="notice">Please type your facebook id or url and validate this first.</p>

  <div class="field">
    <%= f.label :facebook_id , 'Facebook ID' %><br />
    <%= f.text_field :facebook_id , :class => 'textc'%>  <%= f.submit :name =>'validation', :type =>'button' ,:value => 'Validation' %>
    <span id="msg_f" class="message"></span>

  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name , :class => 'flatc' , :disabled =>'true'%>   <span id="msg_name" class="message"></span>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url  , :class => 'flatc' , :disabled =>'true'%>  <span id="msg_url" class="message"></span>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description , :class => 'flatc' , :disabled =>'true'%> <span id="msg_description" class="message"></span>
  </div>
  <div class="actions">
    <%= f.submit %><%= f.submit :name =>'reset', :type =>'button' ,:value => 'Reset' %>
  </div>
<% end %>
